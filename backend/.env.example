NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Local Postgres inside docker-compose
DATABASE_URL=postgresql://bestoffer:replace_with_strong_password@postgres:5432/bestoffer

# Very important: set a long random value
JWT_SECRET=replace_with_long_random_secret

# Runs SQL files from backend/sql once per file
RUN_SQL_MIGRATIONS=true

# In production keep this false
DEV_SEED_ADMIN=false

# Optional: enable stronger AI responses via OpenAI (chatbot fallback stays active if empty)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_TIMEOUT_MS=9000
# OPENAI_MAX_PROMPT_ITEMS=6

# Comma separated list for web CORS, example:
# CORS_ORIGINS=https://admin.bestoffer.app,https://bestoffer.app
CORS_ORIGINS=*
